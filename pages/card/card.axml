<view class="container">

  <image class="image"
    data-name="test"
    onTap="onTap"
    mode="aspectFill" src="/asserts/picture/boba.jpg"  onError="imageError" onLoad="imageLoad" />

  <container className="container-item">
    <view class="aline">
      <title
        className="changeColor"
        onActionTap="titleGo"
        >{{GoodName}}
      </title>
    </view>

      <view class="aline" style="font-size: 13px; color: #777777;">
        月售1000000    本店销量第1名
      </view>
      <view class="aline">
      
        <view style="display: flex; margin-top: 20px;">
          <view a:for="{{tag}}" style="padding-right: 5px; margin-top: -20px; padding-top: 0px; height = 100%">
            <tag size="sm" type="primary">NB</tag>
          </view>
        </view>
      </view>
      
    <view>
      <view class="aline">
        <view style="margin-top: 10px; font-size: 28px; color: #f36436;">
          ￥18起
        </view>
      </view>
    </view>

    <view style="height:20p; width:30%; margin-top: -10px">
      <button style="margin-left: 50px; margin-bottom: -10px; width: 160px;" type="primary" size="mini">加入收藏</button>
      <button style="margin-left: 50px; margin-bottom: -10px; width: 160px;" type="primary" size="mini">立即购买</button>
    </view>
  </container>

  <container className="container-item">
      <view class="aline">
        <title
          hasLine="true"
          className="subTitle"
          onActionTap="titleGo"
