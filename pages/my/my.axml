  <view class="entries">
    <view
      a:for="{{entries}}"
      class="entries__item"
    >
      <image
        class="entries__cover"
        src="{{item.cover}}"
        mode="scaleToFill"
      />
      <view class="entries__title">{{item.title}}</view>
    </view>
  </view>
  <!-- <view class="divider --middle" /> -->
